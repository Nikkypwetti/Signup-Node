<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <h1 class="text-center"> WELCOME TO THE DASHBOARD</h1>
    <% if (userDetails.length > 0) { %>
        <table class="table table-bordered table-striped table-hover">
            <tr>
                <td>S/N</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Password</td>
                <td>Actions</td>
            </tr>

            <% for( let index = 0; index < userDetails.length; index++ ) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= userDetails[index].firstname %></td>
                    <td><%= userDetails[index].lastname %></td>
                    <td><%= userDetails[index].email %></td>
                    <td><%= userDetails[index].password %></td>

                    <td class="d-flex g-2">
                        <form action="/delete" method="post">
                            <input type="hidden" name="userEmail" value="<%= userDetails[index].email %>">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-solid fa-trash fa-2x"></i></button>
                        </form>
                        <form action="/edit" method="post">
                            <input type="hidden" name="userEmail" value="<%= userDetails[index].email %>">
                            <button type="submit" class="btn btn-warning"><i class="fa fa-solid fa-edit fa-2x"></i></button>
                        </form>
                    </td>
                </tr>
            
            <% } %>
        </table> 
    <% } else { %>
        <div class="text-center alert alert-dark">No users found</div>
    <% } %>  
    <a href="/signup">Go to signup</a>
    <img src="https://res.cloudinary.com/dtu3koszg/image/upload/v1681987658/cld-sample-4.jpg" alt="">


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>">

    
</body>
</html>